%h1 Listing tools

%table
  %thead
    %tr
      %th Name
      %th Quantity
      %th Has card
      %th
      %th
      %th

  %tbody
    - @tools.each do |tool|
      %tr
        %td= tool.name
        %td= tool.quantity
        %td= tool.has_card
        %td= link_to 'Show', tool
        %td= link_to 'Edit', edit_tool_path(tool)
        %td= link_to 'Destroy', tool, :method => :delete, :data => { :confirm => 'Are you sure?' }

