<!DOCTYPE html>
<html>
<head>
  <title>BazaNarzedzia</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<% flash.each do |message_type, message| %>
		<div class= "row">
			<div class="col-md-8 col-md-offset-2 alert alert-<%= message_type %>"><%= message %> </div>
		</div>
		<% end %>
<%= yield %>

</div>
</body>
</html>
